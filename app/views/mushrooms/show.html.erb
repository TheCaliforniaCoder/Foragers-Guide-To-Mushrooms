<h1><%= @mushroom.name %></h1>

<p><%= @mushroom.body %></p>

<%= form_with model: @mushroom do |form| %>
    <%= form.label :psychedelic %>
    <%= form.check_box :psychedelic, checked: @mushroom.psychedelic %>
  
    <%= form.label :deadly %>
    <%= form.check_box :deadly, checked: @mushroom.deadly %>
  
    <%= form.submit %>
  <% end %>




<%= button_to "Delete Mushroom", mushroom_path(@mushroom), method: :delete, data: { confirm: "Are you sure you want to delete this mushroom?" } %>
<%= link_to "New Mushroom", new_mushroom_path %>

<% if @mushroom.img %>
<%= image_tag(@mushroom.img) %>
<% else %>
<%= image_tag "DrawnMushie.jpg", width: "100" %>
<% end %>
<%= link_to "Back to Mushrooms", mushrooms_path %>