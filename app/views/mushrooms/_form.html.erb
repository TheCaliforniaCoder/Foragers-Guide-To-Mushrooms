<%= form_for mushroom do |form| %>
    <% if mushroom.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(mushroom.errors.count, "error") %> prohibited this mushroom from being saved:</h2>
  
        <ul>
          <% mushroom.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class ="input-name">
        <%= form.label :name, style: "margin: 10px" %>
        <%= form.text_field :name %>
    </div>

    <div class ="input-body">
        <%= form.label :body, style: "margin: 10px" %>
        <%= form.text_field :body %>
    </div>

    <div class ="input-boolean">
        <%= form.label :psychedelic, style: "margin: 10px" %>
        <%= form.check_box :psychedelic, checked: @mushroom.psychedelic %>
      
        <%= form.label :deadly, style: "margin: 10px" %>
        <%= form.check_box :deadly, checked: @mushroom.deadly %>
    </div>

    <div class ="input-img">
        <%= form.label :img, style: "margin: 10px" %>
        <%= form.text_field :img, style: "margin: 5px" %>
    </div>
  
    <div class ="input-btn">
        <%= form.submit %>
    </div>   
<% end %>